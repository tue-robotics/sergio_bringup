<?xml version="1.0"?>

<launch>

    <group ns="sergio">

        <!-- ROBOCUP RECORDER -->
        <include file="$(find robot_launch_files)/launch/essentials/record_robocup.launch">
            <arg name="machine" value="sergio2" />
        </include>
        
        <!-- NAVIGATION -->
        <include file="$(find robot_launch_files)/launch/navigation/navigation.launch">
            <arg name="machine" value="sergio2"/>
        </include>

        <!-- WORLD MODEL -->
        <include file="$(find robot_launch_files)/launch/world_modeling/world_model.launch">
            <arg name="machine" value="sergio2"/>
        </include>

        <!-- Vizbox -->
        <rosparam>
story:
    title: Storing Groceries
    storyline:
        - Look at the cabinet
        - Find the table
        - Take item from the table
        - Put item in the cabinet
        </rosparam>
        <include file="$(find robot_launch_files)/launch/interaction/vizbox.launch">
            <arg name="machine" value="sergio2" />
            <arg name="robot_name" value="sergio" />
        </include>

    </group>

    <!-- Start the challenge -->
    <node pkg="challenge_storing_groceries" type="challenge_storing_groceries" name="state_machine" args="sergio" output="screen" required="true"/>

</launch>
