<?xml version="1.0" encoding="UTF-8"?>
<!-- Checkout README.md to see when to use this launch file -->
<launch>
	<group ns="sergio">
		<!-- NAVIGATION -->
		<include file="$(find robot_launch_files)/launch/navigation/navigation.launch">
			<arg name="machine" value="sergio2" />
		</include>

		<!-- WORLD MODEL -->
		<include file="$(find robot_launch_files)/launch/world_modeling/world_model.launch">
			<arg name="machine" value="sergio2" />
			<arg name="faces_db" value="~/MEGA/data/$(optenv ROBOT_ENV rgo2018)/models/openface_ros/faces.pkl" />
		</include>

		<!-- Joke -->
		<include file="$(find robot_launch_files)/launch/essentials/joke.launch">
			<arg name="machine" value="sergio2" />
		</include>

		<!-- Vieze node -->
		<node name="vieze_node" pkg="challenge_final" type="telegram_face_recognizer.py" output="log" respawn="true" />

                
                <!-- Slack ROS Bridge -->
		<group if="$(optenv ROBOT_REAL false)">
		    <node name="slack_ros_bridge" pkg="slack_ros" type="slack_ros_bridge" output="screen" respawn="true">
			<param name="token" value="xoxb-354632550720-0xIVlhdZ92ATUaBaSKp6j2oO" />
			<remap from="message_to_ros" to="message_from_telegram" />
			<remap from="message_from_ros" to="message_to_telegram" />
			<remap from="image_to_ros" to="photo_from_telegram" />
			<remap from="image_from_ros" to="photo_to_telegram" />
		    </node>
		</group>

	</group>

	<node name="conversation_engine" pkg="conversation_engine" type="engine" output="log" required="true" args="--robot sergio">
		<remap from="robot_to_user" to="/sergio/message_to_telegram" />
		<remap from="user_to_robot" to="/sergio/message_from_telegram" />
	</node>

	<!-- Action server state machine -->
	<node name="state_machine" pkg="action_server" type="main.py" output="log" required="false" respawn="true">
		<param name="robot_name" value="sergio" />
	</node>
</launch>
